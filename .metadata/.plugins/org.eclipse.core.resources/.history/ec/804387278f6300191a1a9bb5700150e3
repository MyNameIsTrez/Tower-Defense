package data;

import static helpers.Artist.*;

public class TileGrid {

	public Tile[][] map;
	
	public TileGrid() {
		map = new Tile[20][15];
		for (int i = 0; i < map.length; i++) {
			for (int j = 0; j < map[i].length; j++) {
				map[i][j] = new Tile(i * 64, j * 64, 64, 64, TileType.Grass);
			}
		}
	}
	
	public void Draw() {
		for (Tile row : map) {
			for (Tile tile : row) {
				tile.Draw();
			}
		}
	}
}
