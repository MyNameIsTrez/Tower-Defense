package data;

import org.lwjgl.input.Mouse;
import static helpers.Artist.*;

public class Player {

	private TileGrid grid;
	
	public Player(TileGrid grid) {
		this.grid = grid;
	}
	
	public void SetTile() {
		grid.SetTile((int) Math.floor(Mouse.getX() / 64),
				/*(int) Math.floor((HEIGHT - Mouse.getY() - 1) / 64)*/
				(int) Math.floor(Mouse.getY() / 64), TileType.Water);
		grid.SetTile(10, 2, TileType.Water);
		System.out.println("x: " + (int) Math.floor(Mouse.getX() / 64) + " y: " + Mouse.getY());
	}
	
}
